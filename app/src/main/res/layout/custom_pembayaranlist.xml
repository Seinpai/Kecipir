<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_main"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:minHeight="150dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="8dp"
            android:layout_weight="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="6"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/nota_pembayaranlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No Nota"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/nama_pembayaranlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nama"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tglorder_pembayaranlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tanggal Oreder"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tglpanen_pembayaranlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tanggal Panen"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/total_pembayaranlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Harga"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/payment_pembayaranlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pembayaran"
                    android:textSize="12sp" />

            </LinearLayout>


        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>

        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/status_historylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konfimasi Pembayaran"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
