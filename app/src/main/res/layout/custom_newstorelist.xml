<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="220dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="4dp"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="#fff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="220dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="2"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">

                <ImageView
                    android:id="@+id/storelist_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:contentDescription="Gambar Produk"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_logo_white" />

                <TextView
                    android:id="@+id/storelist_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_alignParentBottom="true"
                    android:padding="4dp"
                    android:text="Grade A"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"
                    android:background="@android:color/holo_red_light"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/storelist_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"/>

                    <TextView
                        android:id="@+id/storelist_nama_sayuran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@id/storelist_stock"
                        android:alpha="1"
                        android:text="Nama Sayuran"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/storelist_harga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:textSize="14sp"
                        android:textColor="@color/colorOrange"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_alignLeft="@+id/storelist_nama_sayuran"
                        android:layout_alignStart="@+id/storelist_nama_sayuran"
                        android:layout_below="@id/storelist_stock"/>

                    <TextView
                        android:id="@+id/storelist_satuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Satuan"
                        android:textSize="12sp"
                        android:layout_below="@+id/storelist_harga"/>
                    <TextView
                        android:id="@+id/storelist_petani"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Petani"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_below="@id/storelist_satuan"/>



                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_sale"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_icon_sale"
            android:visibility="invisible"
            />


    </FrameLayout>
</android.support.v7.widget.CardView>
