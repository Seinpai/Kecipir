<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Nota"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_email"
            android:layout_below="@id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:text="Nama"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_telp"
            android:layout_below="@id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Tanggal "
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/txt_tgldaftar"
            android:layout_below="@id/txt_telp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Jumlah"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Keterangan"
            android:layout_below="@id/txt_tgldaftar"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_jmlbelanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Keterangan"
            android:layout_below="@id/txt_alamat"
            android:textSize="12sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
