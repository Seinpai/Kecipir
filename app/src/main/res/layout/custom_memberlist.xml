<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="8dp"
    android:background="#eeeeee">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="8dp"
            android:id="@+id/img_view"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_centerVertical="true"
            android:src="@drawable/green_icon"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1dp" />

        <RelativeLayout
            android:layout_toRightOf="@id/img_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nama"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_jmlbelanja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:text="Jumlah Belanja"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txt_nama"
                android:background="@android:color/black"/>
            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_nama"
                android:layout_marginTop="2dp"
                android:textColor="#8a8a8a"
                android:layout_weight="1"
                android:text="email@email.com"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_telp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_email"
                android:textColor="#8a8a8a"
                android:layout_marginTop="2dp"
                android:text="082345243242 "
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_tgldaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_telp"
                android:layout_marginTop="2dp"
                android:textColor="#8a8a8a"
                android:layout_weight="1"
                android:text="Tanggal Dftar"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_tgldaftar"
                android:textColor="#8a8a8a"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:text="Alamat jalan runah saya"
                android:textSize="12sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
