<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_main"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="#fff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/storelist_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:contentDescription="Gambar Produk"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            android:alpha="0.4"
            android:background="#000" />

        <TextView
            android:id="@+id/storelist_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="bottom|right"
            android:padding="8dp"
            android:text="Grade A"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:background="@android:color/holo_red_light"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/storelist_nama_sayuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:alpha="1"
                android:text="Nama Sayuran"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/storelist_petani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Stock"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:layout_alignTop="@+id/storelist_satuan"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/storelist_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Grade"
                android:layout_alignBottom="@+id/storelist_nama_sayuran"
                android:layout_alignRight="@+id/storelist_petani"
                android:layout_alignEnd="@+id/storelist_petani" />

            <TextView
                android:id="@+id/storelist_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Harga"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/storelist_nama_sayuran"
                android:layout_alignStart="@+id/storelist_nama_sayuran" />


            <TextView
                android:id="@+id/storelist_satuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Satuan"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/storelist_harga"
                android:layout_toEndOf="@+id/storelist_harga" />

            <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:background="#333"-->
                <!--android:contentDescription="next Detail" />-->

        </RelativeLayout>


        <ImageView
            android:id="@+id/image_sale"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_icon_sale"
            android:visibility="invisible"
            />


    </FrameLayout>
</android.support.v7.widget.CardView>
